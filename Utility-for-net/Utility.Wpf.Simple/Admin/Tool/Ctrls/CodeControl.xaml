<UserControl x:Class="Tool.Ctrls.CodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tool.Ctrls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Header="源字符串" Grid.Row="0">
            <RichTextBox Name="originVal"></RichTextBox>
        </GroupBox>
        <GroupBox Header="新字符串" Grid.Row="1">
            <RichTextBox Name="newVal"></RichTextBox>
        </GroupBox>
        <GroupBox Header="操作" Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Button Width="50" Height="30" Margin="20,0,0,0" Click="GeneratorClcik">生成</Button>
                <Button Width="50" Height="30" Margin="20,0,0,0" Click="CleanClcik">清空</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
