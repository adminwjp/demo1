                    res += jschars[id];
                }
                return res;
            }

            function htmlEncode(str) {
                var div = document.createElement("div");
                div.appendChild(document.createTextNode(str));
                return div.innerHTML;
            }

            function htmlDecode(str) {
                var div = document.createElement("div");
                div.innerHTML = str;
                return div.innerText;
            }

            $(function () {

