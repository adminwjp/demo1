            var $this = $(this);
            var isDocument = $this.data('isdocument');
            replaceUrl($this.data("type"));
            if (isDocument == "upload") {
                $.get('@CachedUrlHelper.Action("_EditDocument", "Document")', function (data) {
                    $('#_ListDocuments').html(data);
                });
