                        , { fixed: 'right', width: 200, align: 'center', toolbar: '#barList' }
                    ]]
                },
                table: undefined,
                initial: undefined,
                key: 'id',
                add: '/Admin/Resource/AddClaim',
                update: '/Admin/Resource/UpdateClaim',
                delete: '/Admin/Resource/deleteClaim'
            },
            resourceProperties: {
                reload: false,
                form: "#formResourcePropertiesEdit",
                formId: "#divResourcePropertiesEdit",
                options: {
                    elem: '#resourceProperties',
                    id: 'resourceProperties'
                    , url: '/admin/Resource/Property'
                    , cols: [[
                        { type: 'checkbox', fixed: 'left' },
                        { field: 'key', width: 180, title: 'Key', sort: true }
                        , { field: 'id', width: 180, title: 'Id' }
                        , { field: 'api_resource_id', width: 180, title: 'ApiResourceId', sort: true }
                        , { field: 'value', width: 180, title: 'Value' }
                        , { fixed: 'right', width: 200, align: 'center', toolbar: '#barList' }
                    ]]
                },
                table: undefined,
                initial: undefined,
                key: 'id',
                add: '/Admin/Resource/AddProperty',
                update: '/Admin/Resource/UpdateProperty',
                delete: '/Admin/Resource/deleteProperty'
            },
            resourceScopes: {
                reload: false,
                form: "#formResourceScopeEdit",
                formId: "#divResourceScopeEdit",
                options: {
                    elem: '#resourceScopes',
                    id: 'resourceScopes'
                    , url: '/admin/Resource/Scope'
                    , cols: [[
                        { type: 'checkbox', fixed: 'left' },
                        { field: 'scope', width: 180, title: 'Scope', sort: true }
                        , { field: 'id', width: 180, title: 'Id' }
                        , { field: 'api_resource_id', width: 180, title: 'ApiResourceId', sort: true }
                        , { fixed: 'right', width: 200, align: 'center', toolbar: '#barList' }
                    ]]
                },
                table: undefined,
                initial: undefined,
                key: 'id',
                add: '/Admin/Resource/AddScope',
                update: '/Admin/Resource/UpdateScope',
                delete: '/Admin/Resource/deleteScope'
            },
            resourceSecrets: {
                reload: false,
                form: "#formResourceSecretEdit",
                formId: "#divResourceSecretEdit",
                options: {
                    elem: '#resourceSecrets',
                    id: 'resourceSecrets'
                    , url: '/admin/Resource/Secret'
                    , cols: [[
                        { type: 'checkbox', fixed: 'left' },
                        { field: 'description', width: 180, title: 'Description', sort: true }
                        , { field: 'id', width: 180, title: 'Id' }
                        , { field: 'api_resource_id', width: 180, title: 'ApiResourceId', sort: true }
                        , { field: 'value', width: 180, title: 'Value' }
                        , { field: 'expiration', width: 180, title: 'Expiration' }
