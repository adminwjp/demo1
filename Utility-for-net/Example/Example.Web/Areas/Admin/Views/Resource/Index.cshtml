<script type="text/javascript" src="/layui/layui.js"></script>
<script type="text/javascript" src="/js/global.js"></script>
<script>
    var options = {
        url: '/Admin/Resource/Load',
        add: '/Admin/Resource/Add',
        update: '/Admin/Resource/Update',
        delete: '/Admin/Resource/delete',
        id: 'resources',
        form: undefined,
        formId: undefined,
        menuName: 'resource',
        key: 'id',
        tabName: 'resource_tabs',
        many: true,
        tabs: {
            resources: {
                form: "#formEdit",
                formId: "#divEdit",
                reload: true,
                options: {
                    elem: '#resources',
                    id: 'resources',
                    url: '/admin/Resource/load'
                },
                table: undefined,
                initial: undefined,
                key: 'id',
                add: '/Admin/Resource/Add',
                update: '/Admin/Resource/Update',
                delete: '/Admin/Resource/delete',
            },
            resourceClaims: {
                reload: false,
                form: "#formResourceClaimsEdit",
                formId: "#divResourceClaimsEdit",
                options: {
                    elem: '#resourceClaims',
                    id: 'resourceClaims'
                    , url: '/admin/Resource/Claim'
                    , cols: [[
                        { type: 'checkbox', fixed: 'left' },
                        { field: 'api_resource_id', width: 180, title: 'ApiResourceId', sort: true }
